<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <EntityComponents>

<!-- WEAPONS definitions START -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition"> <!-- (NPC-ACS)-AssaultDivision-Weapons-Standard -->
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>(NPC-ACS)-AssaultDivision-Weapons-Standard</SubtypeId>
      </Id>
      <Description>
        [RivalAI Weapons]

        [UseStaticGuns:true]
        [UseTurrets:true]

        [MaxStaticWeaponRange:7500]
        [WeaponMaxAngleFromTarget:5]
        [WeaponMaxBaseDistanceTarget:17]

        [UseBarrageFire:true]
        [MaxFireRateForBarrageWeapons:200]
      </Description>
    </EntityComponent>
<!-- WEAPONS definitions END -->


<!-- BEHAVIOR START -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition"> <!-- (NPC-ACS)-Behavior-AssaultDivision-Hunter-LongRange -->
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>(NPC-ACS)-Behavior-AssaultDivision-Hunter-LongRange</SubtypeId>
      </Id>
      <Description>
        [RivalAI Behavior]

        [BehaviorName:Hunter]

        [AutopilotData:(NPC-ACS)-AssaultDivision-Autopilot-Hunter-Primary]
        [SecondaryAutopilotData:(NPC-ACS)-AssaultDivision-Autopilot-Hunter-Secondary-LongRange]

        [TargetData:(NPC-ACS)-AssaultDivision-Hunter-Targeting]

        [EngageOnTargetLineOfSight:true]
        [EngageOnWeaponActivation:true]

        [WeaponSystem:(NPC-ACS)-AssaultDivision-Weapons-Standard]
				  
		[Triggers:ACS-AssaultDivision-Trigger-Announce]
		[Triggers:ACS-AssaultDivision-Trigger-Warning]
		[Triggers:PVTACS-AD-Trigger-TargetDetected-SupportCall]
		
		[Triggers:PVTACS-Trigger-GridDamagedBountyIDAssignment]
		[Triggers:PVTACS-Trigger-RemoteCompromisedBounty]

      </Description>
    </EntityComponent>
	
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition"> <!-- (NPC-ACS)-Behavior-AssaultDivision-Hunter-ShortRange -->
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>(NPC-ACS)-Behavior-AssaultDivision-Hunter-ShortRange</SubtypeId>
      </Id>
      <Description>
        [RivalAI Behavior]

        [BehaviorName:Hunter]

        [AutopilotData:(NPC-ACS)-AssaultDivision-Autopilot-Hunter-Primary]
        [SecondaryAutopilotData:(NPC-ACS)-AssaultDivision-Autopilot-Hunter-Secondary-ShortRange]

        [TargetData:(NPC-ACS)-AssaultDivision-Hunter-Targeting]

        [EngageOnTargetLineOfSight:true]
        [EngageOnWeaponActivation:true]

        [WeaponSystem:(NPC-ACS)-AssaultDivision-Weapons-Standard]

		[Triggers:ACS-AssaultDivision-Trigger-Warning]
		[Triggers:PVTACS-AD-Trigger-TargetDetected-SupportCall]
		
        [Triggers:ACS-AssaultDivision-Trigger-RandomRamming]
		
		[Triggers:PVTACS-Trigger-GridDamagedBountyIDAssignment]
		[Triggers:PVTACS-Trigger-RemoteCompromisedBounty]

      </Description>
